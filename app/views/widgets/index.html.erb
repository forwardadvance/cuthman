<h1>Listing widgets</h1>

<table>
  <thead>
    <tr>
      <th>Page</th>
      <th>Template location</th>
      <th>Resource</th>
      <th>Resource type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @widgets.each do |widget| %>
      <tr>
        <td><%= widget.page_id %></td>
        <td><%= widget.template_location %></td>
        <td><%= widget.resource_id %></td>
        <td><%= widget.resource_type %></td>
        <td><%= link_to 'Show', widget %></td>
        <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
        <td><%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

