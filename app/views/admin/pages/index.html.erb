<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Slug</th>
      <th>Parent</th>
      <th>Template</th>
      <th>Metadata</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.slug %></td>
        <td><%= page.parent_id %></td>
        <td><%= page.template_id %></td>
        <td><%= page.metadata_id %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

